{% extends 'base.html.twig' %}

{% block title %}Noor Design | Panier
{% endblock %}

{# AFFICHAGE DU PANIER #}

{% block content %}

    <!-- Page Header -->
    <div class="color-bg-header py-16">
      <div class="container mx-auto px-6 text-center">
        <h1 class="text-4xl font-semibold text-gray-800 mb-2">Mon panier</h1>
        <p class="text-lg text-gray-600">
          Consultez et modifiez les articles de votre panier
        </p>
      </div>
    </div>

    <!-- Section du panier -->
    <div class="container mx-auto px-6 py-12">
      <!-- Contenu vide si le panier est vide -->
      <div id="empty-cart" class="text-center py-10 hidden">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-20 w-20 mx-auto text-gray-400 mb-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"
          />
        </svg>
        <h2 class="text-2xl font-semibold text-gray-700 mb-4">
          Votre panier est vide
        </h2>
        <p class="text-gray-500 mb-8">
          Découvrez notre collection et ajoutez des articles à votre panier
        </p>
        <a
          href="catalogue.html"
          class="bg-gold text-white px-6 py-3 rounded-full hover:bg-yellow-600 transition"
          >Explorer le catalogue</a
        >
      </div>
      <!-- Tableau du panier avec produits -->
      <div id="cart-content">
        <div class="overflow-x-auto">
          <table class="min-w-full bg-white border border-gray-200 mb-8">
            <thead>
              <tr class="bg-gray-100 text-gray-600">
                <th class="py-3 px-4 text-left">Produit</th>
                <th class="py-3 px-4 text-center">Prix unitaire</th>
                <th class="py-3 px-4 text-center">Quantité</th>
                <th class="py-3 px-4 text-center">Total</th>
                <th class="py-3 px-4 text-center">Action</th>
              </tr>
            </thead>
            <tbody>
              <!-- Produit a mettre en boucle forEach -->
              <tr class="border-t border-gray-200">
                <td class="py-4 px-4">
                  <div class="flex items-center">
                    <img
                      src="https://images.unsplash.com/photo-1599643478518-a784e5dc4c8f?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80"
                      alt="Bracelet Harmonie"
                      class="w-16 h-16 object-cover rounded mr-4"
                    />
                    <div>
                      <h3 class="font-medium text-gray-800">
                        Bracelet Harmonie
                      </h3>
                      <!-- REF mesure conservatoire -->
                      <!-- <p class="text-sm text-gray-500">Réf: ND-BR2025-01</p> -->
                    </div>
                  </div>
                </td>
                <td class="py-4 px-4 text-center">
                  <span class="text-gray-700">59 €</span>
                </td>
                <td class="py-4 px-4 text-center">
                  <div class="flex items-center justify-center">
                    <div
                      class="flex items-center border border-gray-300 rounded-full overflow-hidden"
                    >
                      <button
                        type="button"
                        class="px-3 py-1 bg-gray-100 text-gray-600 hover:bg-gray-200 transition quantity-decrease"
                      >
                        -
                      </button>
                      <input
                        type="number"
                        class="quantity-input w-12 text-center border-0 focus:outline-none"
                        min="1"
                        max="10"
                        value="1"
                        data-price="59"
                      />
                      <button
                        type="button"
                        class="px-3 py-1 bg-gray-100 text-gray-600 hover:bg-gray-200 transition quantity-increase"
                      >
                        +
                      </button>
                    </div>
                  </div>
                </td>
                <td class="py-4 px-4 text-center font-medium product-total">
                  59 €
                </td>
                <td class="py-4 px-4 text-center">
                  <button
                    class="text-red-500 hover:text-red-700 transition remove-item"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-5 w-5"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                      />
                    </svg>
                  </button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- Récapitulatif et total -->
        <div class="flex flex-col md:flex-row md:justify-end md:items-start">
          <!-- Coupon REDUCTION mesure conservatoire -->
          <!-- <div class="w-full md:w-1/3 mb-8 md:mb-0">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Code promo</h3>
            <div class="flex items-center">
              <input
                type="text"
                placeholder="Entrez votre code promo"
                class="pl-3 pr-10 py-2 border border-gray-300 rounded-l-md text-sm focus:outline-none focus:ring-2 focus:ring-gold flex-grow"
              />
              <button
                class="bg-gold text-white px-4 py-2 rounded-r-md hover:bg-yellow-600 transition"
              >
                Appliquer
              </button>
            </div>
          </div> -->

          <!-- Résumé de la commande -->
          <div class="w-full md:w-1/3 ml-auto">
            <div class="bg-gray-50 rounded-lg p-6 border border-gray-200">
              <h3 class="text-lg font-semibold text-gray-800 mb-4">
                Résumé de la commande
              </h3>

              <div class="flex justify-between py-2 border-b border-gray-200">
                <span class="text-gray-600">Sous-total</span>
                <span class="font-medium text-gray-800" id="subtotal"
                  >219 €</span
                >
              </div>
              <div class="flex justify-between py-2 border-b border-gray-200">
                <span class="text-gray-600">Livraison</span>
                <span class="font-medium text-gray-800" id="shipping">
                  <span class="text-green-600">Gratuite</span>
                  <span class="text-xs text-gray-500 block"
                    >Dès 100€ d'achat</span
                  >
                </span>
              </div>

              <div class="flex justify-between py-2 mb-4">
                <span class="text-gray-600">TVA (20%)</span>
                <span class="font-medium text-gray-800" id="tax">43,80 €</span>
              </div>

              <div class="flex justify-between py-2 border-t border-gray-300">
                <span class="font-semibold text-gray-800">Total</span>
                <span class="font-bold text-xl text-gold" id="total"
                  >219 €</span
                >
              </div>

              <button
                class="w-full bg-gold text-white py-3 rounded-full mt-6 hover:bg-yellow-600 transition"
              >
                Procéder au paiement
              </button>

              <div class="flex justify-center mt-4">
                <a
                  href="catalogue.html"
                  class="text-gold hover:underline flex items-center"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-4 w-4 mr-1"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 19l-7-7m0 0l7-7m-7 7h18"
                    />
                  </svg>
                  Continuer mes achats
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

{% endblock %}