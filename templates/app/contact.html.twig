{% extends 'base.html.twig' %}

{% block title %}Noor Design | Contact
{% endblock %}

{# AFFICHAGE DE LA PAGE CONTACT #}

{% block content %}

	<!-- Page Header -->
	<div class="color-bg-header py-16">
		<div class="container mx-auto px-6 text-center">
			<h1 class="text-4xl font-semibold text-gray-800 mb-2">Contact</h1>
			<p class="text-lg text-gray-600">
				Une question, une demande spéciale ?
			</p>
		</div>
	</div>

	<!-- Contact Section -->
	<section class="container mx-auto px-6 py-12">
		<div
			class="grid grid-cols-1 lg:grid-cols-2 gap-12">
			<!-- Contact Information -->
			<div>
				<h2 class="text-3xl font-semibold text-gray-800 mb-6">
					Mes informations
				</h2>
				<div class="space-y-8">
					<div class="flex items-start">
						<div class="w-12 h-12 bg-gold rounded-full flex items-center justify-center mr-4">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
							</svg>
						</div>
						<div>
							<h3 class="text-xl font-semibold text-gray-700 mb-1"></h3>
							<p
								class="text-gray-600">
								<!-- 8 rue Auguste Lepère  -->
								44100 NANTES, Pays de la Loire, France
							</p>
						</div>
					</div>

					<div class="flex items-start">
						<div class="w-12 h-12 bg-gold rounded-full flex items-center justify-center mr-4">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
							</svg>
						</div>
						<div>
							<h3 class="text-xl font-semibold text-gray-700 mb-1"></h3>
							<p class="text-gray-600">
								<a href="mailto:sav.noordesign@gmail.com" class="hover:text-gold transition">sav.noordesign@gmail.com</a>
							</p>
						</div>
					</div>

					<div class="flex items-start">
						<div class="w-12 h-12 bg-gold rounded-full flex items-center justify-center mr-4">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
							</svg>
						</div>
						<div>
							<h3 class="text-xl font-semibold text-gray-700 mb-1"></h3>
							<p class="text-gray-600">
								Lundi - Vendredi: 14h - 17h<br/>
								Samedi: Fermé<br/>
								Dimanche: Fermé
							</p>
						</div>
					</div>

					<!-- Social Media Instagram -->
					<div class="flex items-start">
						<div class="w-12 h-12 bg-gold rounded-full flex items-center justify-center mr-4">
							<a href="#" class="w-12 h-12 bg-gold text-white rounded-full flex items-center justify-center hover:bg-gold-dark transition">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewbox="0 0 24 24">
									<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
								</svg>
							</a>
						</div>
						<a href="#">
							<div>
								<h3 class="text-xl font-semibold text-gray-700 mb-1"></h3>
								<p class="text-gray-600">
									Suivez-moi sur les réseaux sociaux !
								</p>
							</div>
						</a>
					</div>
				</div>
			</div>

			<!-- Contact Form -->
			<div>
				<h2 class="text-3xl font-semibold text-gray-800 mb-6">
					Me contacter
				</h2>
				<p class="text-sm text-gray-600 mb-8">
					Les champs marqués d'un astérisque (*) sont obligatoires.
				</p>
				<form class="space-y-6">
					<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
						<div>
							<label for="firstname" class="block text-sm font-medium text-gray-700 mb-1">Prénom *</label>
							<input type="text" id="firstname" name="firstname" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gold" placeholder="Votre prénom"/>
						</div>
						<div>
							<label for="lastname" class="block text-sm font-medium text-gray-700 mb-1">Nom *</label>
							<input type="text" id="lastname" name="lastname" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gold" placeholder="Votre nom"/>
						</div>
					</div>

					<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
						<div>
							<label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email *</label>
							<input type="email" id="email" name="email" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gold" placeholder="votre@email.com"/>
						</div>
						<div>
							<label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Téléphone *</label>
							<input type="tel" id="phone" name="phone" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gold" placeholder="Votre numéro de téléphone"/>
						</div>
					</div>

					<div>
						<label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Sujet *</label>
						<select id="subject" name="subject" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gold">
							<option value="">Sélectionnez un sujet</option>
							<option value="commande">Question sur une commande</option>
							<option value="bijoux">Renseignement sur les bijoux</option>
							<option value="custom">Demande de création sur-mesure</option>
							<option value="collaboration">
								Proposition de collaboration
							</option>
							<option value="autre">Autre</option>
						</select>
					</div>

					<div>
						<label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message *</label>
						<textarea id="message" name="message" rows="5" required class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gold" placeholder="Votre message..."></textarea>
					</div>

					<div class="flex items-start">
						<input type="checkbox" id="privacy" name="privacy" required class="mt-1 mr-2"/>
						<label for="privacy" class="text-sm text-gray-600">
							J'accepte que mes données soient traitées conformément à la
							<a href="#" class="text-gold hover:underline">politique de confidentialité</a>
							de Noor Design.
						</label>
					</div>

					<div class="text-right">
						<button type="submit" class="bg-gold text-white px-6 py-3 rounded-md hover:bg-gold-dark transition">
							Envoyer le message
						</button>
					</div>
				</form>
			</div>
		</div>
	</section>

{% endblock %}
