{% extends 'base.html.twig' %}

{% block title %}Noor Design | Contact
{% endblock %}

{# AFFICHAGE DE LA PAGE CONTACT #}

{% block content %}

	<!-- Page Header -->
	<div class="color-bg-header py-16">
		<div class="container mx-auto px-6 text-center">
			<h1 class="text-4xl font-semibold text-gray-800 mb-2">Contact</h1>
			<p class="text-lg text-gray-600">
				Une question, une demande spéciale ?
			</p>
		</div>
	</div>

	<!-- Contact Section -->
	<section class="container mx-auto px-6 py-12">
		<div
			class="grid grid-cols-1 lg:grid-cols-2 gap-12">
			<!-- Contact Information -->
			<div>
				<h2 class="text-3xl font-semibold text-gray-800 mb-10">Mes coordonnées</h2>
				<div class="space-y-8">
					<div class="flex items-start">
						<div class="w-12 h-12 bg-gold rounded-full flex items-center justify-center mr-4 transition duration-300 hover:bg-gold-dark">
							<a href="https://www.google.com/maps?q=Nantes,France" target="_blank">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
								</svg>
							</a>
						</div>
						<div>
							<h3 class="text-xl font-semibold text-gray-700 mb-1"></h3>
							<p class="text-gray-600">
								<a href="https://www.google.com/maps?q=Nantes,France" target="_blank" class="hover:text-gold transition duration-300">NANTES, Pays de la Loire, France</a>
							</p>
						</div>
					</div>

					<div class="flex items-start">
						<div class="w-12 h-12 bg-gold rounded-full flex items-center justify-center mr-4 transition duration-300 hover:bg-gold-dark">
							<a href="mailto:contact@noordesign.stephen-ins.com">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewbox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
								</svg>
							</a>
						</div>
						<div>
							<h3 class="text-xl font-semibold text-gray-700 mb-1"></h3>
							<p class="text-gray-600">
								<a href="mailto:contact@noordesign.stephen-ins.com" class="hover:text-gold transition duration-300">contact@noordesign.stephen-ins.com</a>
							</p>
						</div>
					</div>


					<!-- Social Media Instagram -->
					<div class="flex items-start">
						<div class="w-12 h-12 bg-gold rounded-full flex items-center justify-center mr-4 transition duration-300 hover:bg-gold-dark">
							<a href="https://www.instagram.com/hanelore_fait_briller_ton_ame/" target="_blank">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="currentColor" viewbox="0 0 24 24">
									<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
								</svg>
							</a>
						</div>
						<div>
							<h3 class="text-xl font-semibold text-gray-700 mb-1"></h3>
							<p class="text-gray-600">
								<a href="https://www.instagram.com/hanelore_fait_briller_ton_ame/" class="hover:text-gold transition duration-300" target="_blank">Suivez-moi sur les réseaux sociaux !</a>
							</p>
						</div>
					</div>
				</div>
			</div>

			<!-- Contact Form -->
			<div>
				<h2 class="text-3xl font-semibold text-gray-800 mb-10">
					Me contacter
				</h2>
				<p class="text-sm text-gray-600 mb-8">
					Les champs marqués d'un astérisque (*) sont obligatoires.
				</p>

				{# Affichage des messages flash #}
				{% for label, messages in app.flashes %}
					{% for message in messages %}
						<div class="mb-4 p-4 rounded-md {% if label == 'success' %}bg-green-100 text-green-800{% else %}bg-red-100 text-red-800{% endif %}">
							{{ message }}
						</div>
					{% endfor %}
				{% endfor %}

				{{ form_start(formContact) }}
				<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
					<div>
						{{ form_label(formContact.firstname, 'Prénom *', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
						{{ form_widget(formContact.firstname, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gold', 'placeholder': 'Votre prénom'}}) }}
						{{ form_errors(formContact.firstname, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
					</div>
					<div>
						{{ form_label(formContact.lastname, 'Nom *', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
						{{ form_widget(formContact.lastname, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gold', 'placeholder': 'Votre nom'}}) }}
						{{ form_errors(formContact.lastname, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
					</div>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
					<div>
						{{ form_label(formContact.email, 'Email *', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
						{{ form_widget(formContact.email, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gold', 'placeholder': 'votre@email.com'}}) }}
						{{ form_errors(formContact.email, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
					</div>
					<div>
						{{ form_label(formContact.phone, 'Téléphone', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
						{{ form_widget(formContact.phone, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gold', 'placeholder': 'Votre numéro de téléphone'}}) }}
						{{ form_errors(formContact.phone, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
					</div>
				</div>

				<div class="mt-6">
					{{ form_label(formContact.subject, 'Sujet *', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
					{{ form_widget(formContact.subject, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gold'}}) }}
					{{ form_errors(formContact.subject, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
				</div>

				<div class="mt-6">
					{{ form_label(formContact.message, 'Message *', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
					{{ form_widget(formContact.message, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gold', 'placeholder': 'Votre message...', 'rows': 5}}) }}
					{{ form_errors(formContact.message, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
				</div>

				<div class="flex items-start mt-6">
					{{ form_widget(formContact.privacy, {'attr': {'class': 'mt-1 mr-2'}}) }}
					{{ form_label(formContact.privacy, "J'accepte que mes données soient traitées conformément à la <a href=\"" ~ path('app_pdc') ~ "\" class=\"text-gold hover:underline\">politique de confidentialité</a> de Noor Design."|raw, {'label_attr': {'class': 'text-sm text-gray-600'}, 'label_html': true}) }}
					{{ form_errors(formContact.privacy, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
				</div>

				<div class="text-right mt-6">
					<button type="submit" class="bg-gold text-white px-6 py-3 rounded-md hover:bg-gold-dark transition">
						Envoyer le message
					</button>
				</div>
				{{ form_end(formContact) }}
			</div>
		</div>
	</div>
</section>{% endblock %}
